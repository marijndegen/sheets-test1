{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/index.ts"],
  "exclude": ["./src/test/**/*", "node_modules"]
}
